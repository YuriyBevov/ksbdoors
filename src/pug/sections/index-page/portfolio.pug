include ../../mixins/section-title
include ../../mixins/custom-select

section.portfolio.lw-alt-bg#portfolio
  .lw-container
    +section-title({
      tag: 'h2',
      title: 'Наши <span>работы</span>'
    })

    include ../../components/tags

    .masonry(data-fancybox-gallery="portfolio")
      .masonry-sizer
      .gutter-sizer
      .masonry-item
        img(data-fancybox-item data-tags="С антипаникой,С фрамугой" src="./assets/img/portfolio/portfolio_1.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(data-fancybox-item data-tags="С антипаникой,Противопожарные" src="./assets/img/portfolio/portfolio_2.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="Противопожарные,С фрамугой" src="./assets/img/portfolio/portfolio_3.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С отбойниками" src="./assets/img/portfolio/portfolio_4.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С антипаникой,С фрамугой,С передаточным окном" src="./assets/img/portfolio/portfolio_5.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С передаточным окном" src="./assets/img/portfolio/portfolio_6.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С антипаникой,С вентиляцией" src="./assets/img/portfolio/portfolio_7.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С фрамугой,Остекленные" src="./assets/img/portfolio/portfolio_8.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С антипаникой,С отбойниками" src="./assets/img/portfolio/portfolio_9.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С антипаникой,С фрамугой" src="./assets/img/portfolio/portfolio_1.jpg" alt="Портфолио" width="100%" height="100%")
      .masonry-item
        img(loading="lazy" data-fancybox-item data-tags="С антипаникой,Противопожарные" src="./assets/img/portfolio/portfolio_2.jpg" alt="Портфолио" width="100%" height="100%")

    +main-btn({
      title: 'Показать еще',
      cls: 'portfolio__btn',
    })



